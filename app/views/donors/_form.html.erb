<%= semantic_form_for @donor do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 25 } %>
    <%= f.input :blood_group, :as => :select, :collection => Group.pluck(:blood_type) %>
    <%= f.input :age, :input_html => { :size => 25 } %>
    <%= f.input :date_to_donate, :input_html => { :size => 25 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :email, :input_html => { :size => 25 } %>
    <%= f.input :phone, :input_html => { :size => 25 } %>
    <%= f.input :address, :input_html => { :class => 'autogrow', :rows => 6, :cols => 23, :maxlength => 1000 } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
