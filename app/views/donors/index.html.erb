<h1>Listing donors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Blood group</th>
      <th>Age</th>
      <th>Date to donate</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donors.each do |donor| %>
      <tr>
        <td><%= donor.name %></td>
        <td><%= donor.blood_group %></td>
        <td><%= donor.age %></td>
        <td><%= donor.date_to_donate %></td>
        <td><%= donor.gender %></td>
        <td><%= donor.email %></td>
        <td><%= donor.phone %></td>
        <td><%= donor.address %></td>
        <td><%#= link_to 'Show', donor %></td>
        <td><%#= link_to 'Edit', edit_donor_path(donor) %></td>
        <td><%#= link_to 'Destroy', donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

