<%= semantic_form_for @welcome do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 25 }, :label => "User name" %>
    <%= f.input :email, :input_html => { :size => 25 } %>
    <%= f.input :phone, :input_html => { :size => 25 } %>
    <%= f.input :dob, :input_html => { :size => 25 } %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :password, :input_html => { :size => 25 } %>
    <%= f.input :confirm_password, :input_html => { :size => 25 } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
