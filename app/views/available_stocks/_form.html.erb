<%= semantic_form_for @available_stock do |f| %>
  <%= f.inputs do %>
    <%= f.input :blood_type, :as => :select, :collection => Group.pluck(:type) %>
    <%= f.input :units, :input_html => { :size => 25 } %>
    <%= f.input :price, :input_html => { :size => 25 } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
