<h1>Listing consumers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Require blood group</th>
      <th>Units required</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Picked date</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumers.each do |consumer| %>
      <tr>
        <td><%= consumer.name %></td>
        <td><%= consumer.require_blood_group %></td>
        <td><%= consumer.units_required %></td>
        <td><%= consumer.email %></td>
        <td><%= consumer.phone %></td>
        <td><%= consumer.pickup_date %></td>
        <td><%= consumer.address %></td>
        <td><%#= link_to 'Show', consumer %></td>
        <td><%#= link_to 'Edit', edit_consumer_path(consumer) %></td>
        <td><%#= link_to 'Destroy', consumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

